<!-- prettier-ignore -->
<%- include('../partials/header'); %>
<link rel="stylesheet" href="/css/create.css" />
<main class="main">
	<div class="main-container container">
		<div class="heading text-center">
			<h1>Create A Challenge</h1>
		</div>
		<form method="POST" class="main-form">
			<div class="form-group xdaysofy-form">
				<input type="number" name="x" class="form-control x" placeholder="X" />
				<span>Days of</span>
				<input type="text" name="y" class="form-control y" placeholder="Y" />
			</div>
			<div class="form-group">
				<h4>Required While Uploading :</h4>
				<div class="form-check">
					<input
						class="form-check-input"
						type="checkbox"
						id="links"
						name="links"
						value="links"
					/>
					<label class="form-check-label" for="links"> Links </label>
				</div>
				<div class="form-check">
					<input
						class="form-check-input mx-4"
						type="checkbox"
						id="media"
						name="media"
						value="media"
					/>
					<label class="form-check-label" for="media"> Media </label>
				</div>
			</div>
			<div class="form-group">
				<div class="form-check">
					<h4>
						<label class="form-check-label" for="links">
							Do You Want Daily Remiders?
						</label>
						<input
							class="form-check-input"
							type="checkbox"
							value="reminders"
							id="reminders"
							name="reminders"
						/>
					</h4>
				</div>
			</div>
			<div class="form-group hide" id="timeContainer">
				<h4 style="display: inline-block">Select Reminder Time :</h4>
				<input type="time" name="time" id="time" />
			</div>
			<div class="form-group">
				<h4 style="display: inline-block">Select Start Date :</h4>
				<input type="date" name="date" id="date" />
			</div>
			<button type="submit" class="btn btn-outline-dark">Create</button>
		</form>
	</div>
</main>
<script src="/js/create.js"></script>
<%- include('../partials/footer'); %>
